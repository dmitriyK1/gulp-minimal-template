@require 'nib'
@import  'variables'
@import  'mixins/**/*'

// stylus-type-utils setting
base-font-size = 75%

$html-background = #CCC
$test-background = #FFF

// nib feature
global-reset()

body
  // nib feature
  background linear-gradient(top, white, gray)

  // jeet feature
  +below(900px)
      background red

.container
    // nib feature
    // https://github.com/tj/nib/blob/master/lib/nib/reset.styl
    // or use all: initial
    reset-font()

    // stylus-type-utils feature
    font-size px(30)
    lost-center 980px

.el
    lost-waffle 1/2
    lost-utility edit
    outline 1px red solid

    &:hover
      background yellow

.triangle
    vcenter()
    triangle(up-left, 2em, red)

    .wrap &
        background $test-background
        appearance none

.ellipsis
    // nib feature
    overflow ellipsis

    // translate mixin
    t-scale(1.2)

    font-size 15rem
    // longshadow mixin
    longshadow(text, yellow, 50)

*
*:after
*:before
    outline 0

html
    background-color $html-background
    font-size 2rem
    line-height .9

.bar
    position absolute 10px 20px 30px 40px

.responsive
    // rucksack-css feature
    font-size responsive
    // translate mixin
    t(20px)

    // postcss-pseudoelements test
    &::before
      content '☼☼☼'

#some-id
  box-shadow 0 0 5px 5px blue

a
    all initial
